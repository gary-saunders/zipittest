<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZipitTest.MainPage">

    <Grid
        RowDefinitions="64, *, 96"
        Margin="24"
        RowSpacing="48">


        <StackLayout Grid.Row="0" Spacing="4">
                <Label
                    Text="Add UCE Setup"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />
        </StackLayout>
        <StackLayout Grid.Row="1" Spacing="4">
                <Label
                    Text="Visit our affiliated billing portal to continue setting up your SIM card"
                    HorizontalTextAlignment="Center"
                    HorizontalOptions="FillAndExpand"
                     />
        </StackLayout>
        <StackLayout Grid.Row="2" Spacing="4">
                <Button
                    x:Name="chooseButton"
                    Text="Choose Cell Plan" 
                    Clicked="OpenBrowserButton_Clicked"
                    HorizontalOptions="Fill" />
        </StackLayout>





                



        </Grid>

</ContentPage>
